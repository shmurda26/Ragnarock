@page
@model Ragnarock.Pages.Artist.EditArtistModel
@{
    ViewData["Title"] = "EditArtist";
}
<h1>EditArtifact</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Artist.Id" class="control-label"></label>
        <input asp-for="@Model.Artist.Id" class="form-control" />
        <span asp-validation-for="@Model.Artist.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Artist.Name" class="control-label"></label>
        <input asp-for="@Model.Artist.Name" class="form-control" />
        <span asp-validation-for="@Model.Artist.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Artist.Description" class="control-label"></label>
        <input asp-for="@Model.Artist.Description" class="form-control" />
        <span asp-validation-for="@Model.Artist.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Artist.BirthYear" class="control-label"></label>
        <input asp-for="@Model.Artist.BirthYear" class="form-control" />
        <span asp-validation-for="@Model.Artist.BirthYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Artist.DeathYear" class="control-label"></label>
        <input asp-for="@Model.Artist.DeathYear" class="form-control" />
        <span asp-validation-for="@Model.Artist.DeathYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Artist.ImageName" class="control-label"></label>
        <input asp-for="@Model.Artist.ImageName" class="form-control" />
        <span asp-validation-for="@Model.Artist.ImageName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

