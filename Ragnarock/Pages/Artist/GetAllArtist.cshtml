@page
@model Ragnarock.Pages.Artist.GetAllArtistModel
@{
    ViewData["Title"] = "Artist";
}
<h1>GetAllArtist</h1>

<p>
    <a asp-page="CreateArtist">Create New Artist</a>
</p>

<form>
    <p>
        Search: <input type="text" asp-for="FilterCriteria" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                BirthYear
            </th>
             <th>
                DeathYear
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Artist.Values)
        {
                <tr>
                    <td>
                    @item.Id
                    </td>
                    <td>
                    @item.Name
                    </td>
                    <td>
                    @item.Description
                    </td>
                    <td>
                    @item.BirthYear
                    </td>
                     <td>
                    @item.DeathYear
                    </td>
                    <td>
                        <img src="~/Images/@item.ImageName" width="100" height="100">
                    </td>
                    <td>
                        <p>
                            <a asp-page="EditArtist" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="DeleteArtist" asp-route-id="@item.Id">Delete</a>
                        </p>
                    </td>
                </tr>
        }
    </tbody>

</table>
